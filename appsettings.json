{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "/var/log/app-log.txt",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Information"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },

  "Logging": {
    "WriteTo": "CloudWatch"
  },

  "ConnectionStrings": {
    "DefaultConnection": "DataSource=appdata.db"
  },

  "Jwt": {
    "Key": "[key]",
    "Issuer": "[issuer]",
    "Audience": "APIUserTokenFrontend"
  },

  "AWS": {
    "Region": "us-east-1"
  },

  "Email": {
    "From": "yourEmail@gmail.com",
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 465,
    "Username": "yourEmail@gmail.com",
    "Password": "yourEmailPassword"
  }
}
